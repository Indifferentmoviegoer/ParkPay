<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvAttr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card:cardElevation="25dp"
        card:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <ImageView
                android:id="@+id/attraction_photo"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                />

            <TextView
                android:id="@+id/attraction_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Заголовок"
                android:textSize="30sp"
                android:layout_below="@+id/attraction_photo"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена"
                android:layout_below="@+id/attraction_name"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Баллы"
                android:layout_below="@+id/price"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/bonus"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/text"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/growth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/weight"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/age_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/growth"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/age_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/age_min"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/level_fear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:layout_below="@+id/age_max"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/mapAttr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="4dp"
                android:text="На карте"
                android:layout_below="@+id/level_fear"
                android:layout_toStartOf="@id/attraction_id"
                android:layout_alignBottom="@id/attraction_id"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/attraction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/level_fear"
                android:src="@drawable/ic_map"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>