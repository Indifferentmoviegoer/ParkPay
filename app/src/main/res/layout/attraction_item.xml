<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:card="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAttr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        card:cardElevation="25dp"
        card:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/attraction_photo"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/drifter"
                />

            <TextView
                android:id="@+id/attraction_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дрифтер"
                android:textSize="30sp"
                android:layout_below="@+id/attraction_photo"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/bottomGrey"
                android:text="Ощутите дух захватывающего гоночного соревнования всей семьей! Стремительное движение состава по кольцевому треку создает ощущение скоростной поездки на автомобиле с заносом.  "
                android:layout_below="@+id/attraction_name"
                />


            <View
                android:id="@+id/year"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_year"
                android:layout_below="@+id/text"
                />

            <TextView
                android:id="@+id/age_min"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="17sp"
                android:paddingTop="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/text"
                android:textFontWeight="bold"
                android:text="10+ лет"
                android:lineHeight="13dp"
                android:textColor="@color/white" />

            <View
                android:id="@+id/weightView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/year"
                android:background="@drawable/shape_weight"
                android:layout_below="@+id/text"
                />

            <TextView
                android:id="@+id/weight"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="17sp"
                android:paddingTop="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_toEndOf="@id/year"
                android:layout_below="@+id/text"
                android:textFontWeight="bold"
                android:text="100 кг"
                android:lineHeight="13dp"
                android:textColor="@color/white" />

            <View
                android:id="@+id/growthView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/weightView"
                android:background="@drawable/shape_growth"
                android:layout_below="@+id/text"
                />

            <TextView
                android:id="@+id/growth"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/weightView"
                android:gravity="center"
                android:textSize="17sp"
                android:paddingTop="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/text"
                android:textFontWeight="bold"
                android:text="130 см"
                android:lineHeight="13dp"
                android:textColor="@color/white" />


            <View
                android:id="@+id/levelView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/growthView"
                android:background="@drawable/shape_level"
                android:layout_below="@+id/text"
                />

            <ImageView
                android:id="@+id/levelFear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/growthView"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@+id/text"
                android:src="@drawable/ic_family"
                />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1000"
                android:textSize="17sp"
                android:layout_below="@+id/text"
                android:layout_toStartOf="@id/priceTitle"
                android:textColor="@color/red"
                />

            <TextView
                android:id="@+id/priceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:text="Р"
                android:layout_alignParentEnd="true"
                android:textSize="17sp"
                android:layout_below="@+id/text"
                android:textColor="@color/red"
                />

            <TextView
                android:id="@+id/bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="17sp"
                android:layout_below="@+id/price"
                android:layout_toStartOf="@id/bonusTitle"
                android:textColor="@color/betterBlue"
                />

            <TextView
                android:id="@+id/bonusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Б"
                android:textSize="17sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/price"
                android:layout_alignParentEnd="true"
                android:textColor="@color/betterBlue"
                />


            <!--<TextView-->
            <!--android:id="@+id/age_max"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:text="100"-->
            <!--android:layout_below="@+id/growth"-->
            <!--android:layout_toEndOf="@id/age_max_title"-->
            <!--android:textColor="@color/black"-->
            <!--/>-->




            <!--<TextView-->
            <!--android:id="@+id/level_fear"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="5dp"-->
            <!--android:layout_below="@+id/year"-->
            <!--android:layout_toEndOf="@id/level_fear_title"-->
            <!--android:textColor="@color/black"-->
            <!--/>-->

            <TextView
                android:id="@+id/mapAttr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="8dp"
                android:text="@string/onMap"
                android:layout_below="@+id/year"
                android:layout_toStartOf="@id/attraction_id"
                android:layout_alignBottom="@id/attraction_id"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/attraction_id"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/year"
                android:src="@drawable/ic_marker"
                android:contentDescription="TODO" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>